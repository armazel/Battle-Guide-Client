{
  "version": "3.1.6",
  "compilerOptions": {
      "jsx": "react",
      "declaration": true,
      "lib": ["es6"],
      "module": "commonjs",
      "noFallthroughCasesInSwitch": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "build/",
      "sourceMap": false,
      "strict": true,
      "target": "es5",
      "allowSyntheticDefaultImports": true,
      "plugins": [
          {
              "configFile": "./tslint.json"
          }
      ]
  },
  "exclude": [
      "build",
      "node_modules",
  ]
}